<%= form_with(model: vehicle, local: true) do |form| %>
  <% if vehicle.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(vehicle.errors.count, "error") %> prohibited this vehicle from being saved:</h2>
      <ul>
        <% vehicle.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mb-3">
    <%= form.label "Vehicle Uid" %>
    <%= form.text_field :uid, class: 'form-control', placeholder: "Vehicle UID (like M65)" %>
  </div>
  <div class="form-group mb-3">
    <%= form.label "Enter Route" %>
    <%= form.text_field :route, class: 'form-control', placeholder: "Vehicle Starting Place" %>
  </div>
  <div class="form-group mb-3">
    <%= form.label "Enter Destination" %>
    <%= form.text_field :destination, class: 'form-control', placeholder: "Vehicle Destination Place" %>
  </div>

  <%= form.hidden_field :station_id, value: station.id %>

  <%= form.submit "Add Vehicle in the pool", class: "btn btn-outline-primary btn-block" %>
<% end %>

<div class="card">
  <div class="card-block">
    <div id="map"></div>
  </div>
</div>